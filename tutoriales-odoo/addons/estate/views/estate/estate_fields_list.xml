<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Vista de tipo 치rbol -->
        <record id="view_test_tree" model="ir.ui.view">
            <field name="name">Test Tree View</field>
            <field name="model">test_model</field>
            <field name="arch" type="xml">
                <tree string="Tests">
                    <!-- Campos b치sicos -->
                    <field name="name" />
                    <field name="description" />
                    <field name="postcode" />
                    <field name="state" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="bedrooms" />
                    <field name="living_area" />
                    <field name="garden_area" />
                    <field name="garden" />
                    <!-- Campos de relaci칩n Many2one -->
                    <field name="buyer_id" />
                    <field name="salesman_id" />
                    <field name="property_type_id.type" />
                    <!-- Campo de relaci칩n Many2many -->
                    <field name="property_tag_ids.tag" widget="many2many_tags" />
                    <!-- Campos adicionales -->
                    <field name="active" />
                    <field name="garden_orientation" />
                    <field name="facades" />
                    <field name="garage" />
                    <field name="date_availability" />
                </tree>
            </field>
        </record>
    </data>
</odoo>